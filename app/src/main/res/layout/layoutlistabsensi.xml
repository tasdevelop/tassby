<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BK 1234"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:id="@+id/post_nopol"
        android:layout_alignParentTop="true" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textStyle="bold"
        android:id="@+id/post_status"
        android:layout_marginRight="8dp"
        android:layout_alignTop="@+id/post_nopol"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anto"
        android:textStyle="bold"
        android:id="@+id/post_supir"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/post_nopol"
        android:layout_alignLeft="@+id/post_nopol"
        android:layout_alignStart="@+id/post_nopol"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textStyle="bold"
        android:id="@+id/post_jam"
        android:layout_marginRight="8dp"
        android:layout_alignTop="@+id/post_supir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak ada Muatan"
        android:textStyle="bold"
        android:id="@+id/post_keterangan"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/post_supir"
        android:layout_alignLeft="@+id/post_nopol"
        android:layout_alignStart="@+id/post_nopol"/>

</RelativeLayout>