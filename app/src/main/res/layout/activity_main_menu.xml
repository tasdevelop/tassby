<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/searchbg"
    tools:context="com.gorich.admin.tastruckingsby.MainMenu">



    <Button
        android:layout_height="50dp"
        android:id="@+id/bt_cancel"
        android:padding="16dp"
        android:text="keluar"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:textSize="14sp"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_absensi"
        android:text="Input Absensi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_inputtrip"
        android:text="Input Trip Baru"
        android:layout_below="@+id/bt_absensi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_inputtripgantung"
        android:text="Input Trip Baru (GANTUNG)"
        android:layout_below="@+id/bt_inputtrip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_inputtripgantungsenin"
        android:text="Input Trip Baru (GANTUNG) - Senin"
        android:layout_below="@+id/bt_inputtripgantung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_dataabsensi"
        android:text="Data Absensi"
        android:layout_below="@+id/bt_inputtripgantungsenin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_datatrip"
        android:text="Data Trip"
        android:layout_below="@+id/bt_dataabsensi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_datatripgantung"
        android:text="Data Trip (GANTUNG)"
        android:layout_below="@+id/bt_datatrip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/bt_gantipass"
        android:text="Ganti Password"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bt_datatripgantung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
